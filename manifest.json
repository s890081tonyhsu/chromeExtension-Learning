{
	"manifest_version": 2,

	"name":"display_message",
	"description":"This is to show the test message from website.",
	"version":"1.0",

	"browser_action":{
		"default_icon":"icon128.png",
		"default_popup":"popup.html",
		"script":["jquery.min.js","popup.js"]
	},
	"permissions":[
	"http://*.google.com/",
	"alarms"
	],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com/; object-src 'self'"
}
